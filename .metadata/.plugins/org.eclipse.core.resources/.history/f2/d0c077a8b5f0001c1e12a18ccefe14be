package empresa;

public class Avaliacao {
	Avaliacao(float nota1, float nota2, float nota3) {
		this.mediaAritmetica(nota1,nota2,nota3);
		this.mediaPonderada(nota1,nota2,nota3);
	}
	
	float mediaAritmetica(float nota1, float nota2, float nota3) {
		return (nota1+nota2+nota3) / 3;
	}
	float mediaPonderada(float nota1, float nota2, float nota3) {
		return (nota1 * 2) + (nota2 * 3) + (nota3 * 4) / 9;
	}
	
}
