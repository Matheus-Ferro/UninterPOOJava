package empresa;

public class Avaliacao {
	Avaliacao(double d, double e, double f) {
		System.out.println("Média Aritmética: "+this.mediaAritmetica(d,e,f));
		System.out.printf("Média Ponderada: %.2f", this.mediaPonderada(d,e,f));
	}
	
	double mediaAritmetica(double d, double e, double f) {
		return (d+e+f) / 3;
	}
	double mediaPonderada(double d, double e, double f) {
		return (d * 2) + (e * 3) + (f * 4) / d+e+f;
	}
	
}
