package empresa;

import java.util.ArrayList;

public class Cofrinho {
	private ArrayList<Moeda> moedas = new ArrayList();
	private int totalMoedas;
	private int total5;
	private int total10;
	private int total25;
	private int total50;
	private int total100;
	
	public Cofrinho(Moeda moeda){
		add(moeda);
	}
	
	public Moeda getMoedas() {
		for(Moeda m : moedas){
			if(m.getValor() == 0.05) {
				
			}
		}
	}

	public void add(Moeda moeda) {
		this.moedas = moedas;
	}
	
	public double calcularTotal() {
		double total = 0;
		for(Moeda m : moedas) {
			total += m.getValor();
		}
		return total;
	}

	public void info() {
		System.out.println("Moedas de R$ 0,05: ");
		System.out.println("Moedas de R$ 0,10: ");
		System.out.println("Moedas de R$ 0,25: ");
		System.out.println("Moedas de R$ 0,50: ");
		System.out.println("Moedas de R$ 1,00: ");
		System.out.println("Total de Moedas: " + );
