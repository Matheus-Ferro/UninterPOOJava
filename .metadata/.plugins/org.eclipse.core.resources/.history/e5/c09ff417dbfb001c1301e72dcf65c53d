package empresa;

public class Nota {
	private double nota1;
	private double nota2;
	private final int aprovacao = 7;
	
	public Nota(double nota1, double nota2) {
		setNota1(nota1);
		setNota2(nota2);
	}
	
	public void setNota1(double nota) {
		if(nota < 0 || nota > 10) {
			return;
		}
		this.nota1 = nota;
	}
	public void setNota2(double nota) {
		this.nota2 = nota;
	}
	public double getNota1() {
		return nota1;
	}
	public double getNota2() {
		return nota2;
	}
	public void resultado() {
		double media = (nota1 + nota2) / 2;
		if(media < 4) {
			System.out.println("Média: "+ media + "Status: Reprovado");
		}else if(media < aprovacao) {
			System.out.println("Média: "+ media + "Status: Exame Final");
		}else {
			System.out.println("Média: "+ media + "Status: Aprovado");
		}
	}
}
